  "keyFeatures": [
    "Markup-aware linting for Markdown, AsciiDoc, reStructuredText, HTML, XML, and Org",
    "Extensible rule system with 11 rule types defined in YAML",
    "Fast performance with parallel processing built in Go",
    "Style guide enforcement with package hub integration",
    "Custom vocabulary and terminology support",
    "Multiple output formats (CLI, JSON, line, custom templates)",
    "Built-in spell checking and readability metrics",
    "CI/CD integration with non-zero exit codes",
    "Editor integration via native messaging",
    "Remote configuration sync with package management"
  ],
  "publicApiSurface": [
    "vale [files...] - Lint files or directories",
    "vale sync - Download and install external configuration sources",
    "vale ls-config - Print current configuration",
    "vale ls-metrics <file> - Print file's internal metrics",
    "vale ls-dirs - Print default configuration directories",
    "vale ls-vars - Print supported environment variables",
    "vale fix <alert> - Attempt to automatically fix alerts",
    "--config <path> - Specify config file path",
    "--output <format> - Output format (CLI, JSON, line, or template)",
    "--glob <pattern> - Glob pattern for file matching",
    "--filter <expr> - Expression to filter rules",
    "--minAlertLevel <level> - Minimum alert level to display",
    "--ext <extension> - Extension to associate with stdin",
    "--no-exit - Don't return nonzero exit code on errors",
    "--ignore-syntax - Lint all files line-by-line",
    "--sort - Sort files by name in output"
  ]
